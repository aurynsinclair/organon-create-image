{
  "name": "organon-create-image",
  "version": "0.1.0",
  "description": "MCP server for image generation using Gemini on Vertex AI",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "audit": "npm audit",
    "audit:lockfile": "lockfile-lint --path package-lock.json --type npm --allowed-hosts npm --validate-https --validate-integrity",
    "sast": "cross-env PYTHONUTF8=1 semgrep scan --config auto --error --quiet src/",
    "check:all": "npm run typecheck && npm run lint && npm run format:check && npm run test:coverage && npm run audit && npm run audit:lockfile && npm run sast"
  },
  "dependencies": {
    "@google/genai": "^1.43.0",
    "@modelcontextprotocol/sdk": "^1.27.1",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.3",
    "eslint-config-prettier": "^10.1.8",
    "lockfile-lint": "^5.0.0",
    "prettier": "^3.8.1",
    "typescript": "^5.8.0",
    "typescript-eslint": "^8.56.1",
    "vitest": "^4.0.18"
  },
  "license": "MIT"
}
